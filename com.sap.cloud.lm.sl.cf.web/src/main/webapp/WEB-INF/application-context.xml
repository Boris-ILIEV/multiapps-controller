<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"

    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <import resource="db-context.xml" />
    <import resource="services-context.xml" />
    <import resource="security-context.xml" />
    <import resource="activiti-context.xml" />

    <context:component-scan base-package="com.sap.cloud.lm.sl.cf" />

    <beans profile="cf">
        <bean id="cloudFoundryClientFactory" class="com.sap.cloud.lm.sl.cf.core.cf.CFCloudFoundryClientFactory" />

        <bean id="customTokenServices" class="com.sap.cloud.lm.sl.cf.web.security.CustomTokenServices" />

        <bean id="defaultTagsDetector" class="com.sap.cloud.lm.sl.cf.core.helpers.DefaultTagsDetector" />
        
        <bean id="recentLogsRetriever" class="com.sap.cloud.lm.sl.cf.core.helpers.RecentLogsRetriever" />
        
        <bean id="serviceCreator" class="com.sap.cloud.lm.sl.cf.core.helpers.ServiceCreator" />
    </beans>
</beans>
